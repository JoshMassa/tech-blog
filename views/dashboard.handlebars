<div class="row">
    <div>
        <h2 id="name" class="mt-3" >Welcome, {{name}}</h2>
    </div>
</div>

<div class="post-list">
    <h3>Your Posts</h3>
    {{#each blogPosts as |blogPost|}}
        <div>
            <div class="post">
                <h2 id="blogHeader">
                    <a id="blog_title" href="/blogPost/{{id}}">{{title}}</a>
                    <p id="dateTime">Posted by you on {{format_date createdAt}} at {{format_time createdAt}}</p>
                </h2>
                <p id="content">{{content}}</p>
            </div>
        </div>
    {{/each}}
</div>

<div id="form-adjust" class="container hidden">
    <div class="row">
        <h2 id="newPostHeader">Create New Post</h2>
        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">Title</label>
                <input class="form-input" type="text" id="post-title" name="post-title" />
            </div>
            <div class="form-group">
                <label for="new-post-content">Content</label>
                <textarea class="form-input" type="text" id="new-post-content" name="new-post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" id="create-post-button" class="btn btn-dark">Create Post</button>
            </div>
        </form>
    </div>
</div>

<div class="form-group">
    <button type="submit" id="newPostBtn" class="btn btn-dark">New Post</button>
</div>

<script src="/js/post.js"></script>