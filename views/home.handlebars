{{#each blogPosts as |blogPost|}}
<div class="row mb-4">
    <div class="post col-md-5">
        <h2 id="blogHeader">
            <a id="blog_title" href="/blogPost/{{this.id}}">{{this.title}}</a>
            <p id="dateTime">Posted by {{user.name}} on {{format_date this.createdAt}} at {{format_time this.createdAt}}</p>
        </h2>
        <p id="content">{{this.content}}</p>
    </div>
</div>
{{/each}}